<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SingleChat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:background="@color/onlyBlack"
            android:id="@+id/topItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileImageCard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="10dp"
                android:visibility="visible"
                android:layout_marginVertical="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/imageProgress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="100"
                        android:progressTint="@color/black"
                        android:progressBackgroundTint="@color/white"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <ImageView
                        android:background="@color/onlyWhite"
                        android:src="@drawable/user_icon"
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/profileImageCard"
                app:layout_constraintEnd_toStartOf="@id/menu"
                app:layout_constraintTop_toTopOf="@id/profileImageCard"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/name"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/onlyWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/seen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/onlyWhite" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/menu"
                android:layout_marginHorizontal="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu"
                android:background="@drawable/icon_button_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileImageCard"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:background="@color/onlyBlack"
            android:id="@+id/bottomItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/youBlockedBy"
                android:text="@string/youBlockedBy"
                android:textColor="@color/red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageButton
                android:id="@+id/sendImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:padding="4dp"
                android:background="@drawable/icon_button_bg"
                android:src="@drawable/send_image_icon"/>
            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/onlyWhite"
                android:lineSpacingExtra="1dp"
                android:textCursorDrawable="@drawable/only_white_cursor"
                android:id="@+id/textField"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/sendImage"
                app:layout_constraintBottom_toBottomOf="@id/sendImage"
                app:layout_constraintStart_toEndOf="@id/sendImage"
                app:layout_constraintEnd_toStartOf="@id/send"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/text_field_bg"
                android:hint="@string/write_message"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColorHint="@color/hint"
                android:gravity="center_vertical" />
            <ImageButton
                android:id="@+id/send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/sendImage"
                app:layout_constraintBottom_toBottomOf="@id/sendImage"
                android:padding="4dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/icon_button_bg"
                android:src="@drawable/send_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/centerText"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/no_messages"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/bottomItem"/>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="invisible"
            app:stackFromEnd="true"
            android:id="@+id/chatsRecycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomItem"/>

        <ProgressBar
            android:indeterminateTint="@color/black"
            android:id="@+id/centerProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomItem"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:visibility="gone"
            android:id="@+id/bigImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>