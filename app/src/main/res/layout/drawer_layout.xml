<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/drawer"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/aaaaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/backDrawer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_button_bg"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:text="Qo'shimcha imkoniyatlar"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/backDrawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backDrawer"
        app:layout_constraintBottom_toBottomOf="@id/backDrawer"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDrawer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backDrawer"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab1_icon"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/nameDrawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Normurodov Nazar"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/cardDrawer"
        app:layout_constraintTop_toTopOf="@id/cardDrawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/numberDrawer"/>
    <TextView
        android:id="@+id/numberDrawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+998900085840"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/nameDrawer"
        app:layout_constraintBottom_toBottomOf="@id/cardDrawer"
        app:layout_constraintStart_toEndOf="@id/cardDrawer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDrawer"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/settings_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Akkaunt sozlamalari"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logout_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Akkauntdan chiqish"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/info_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ilova haqida"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/language_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tilni o'zgartirish"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/answered_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Javobi topilgan savollar"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/unanswered_ic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Javobi topilmagan savollar"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>