<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginVertical="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginStart="30dp"
        android:id="@+id/messageFromMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:gravity="end"
        android:textSize="20sp"
        android:padding="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:background="@drawable/message_by_me_bg"
        android:ellipsize="start"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="30dp" />
    <TextView
        android:id="@+id/timeMessageFromMeInSingleChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/messageFromMe"
        app:layout_constraintTop_toBottomOf="@id/messageFromMe"
        android:text="19-aprel,2021-yil"
        android:textSize="11sp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>