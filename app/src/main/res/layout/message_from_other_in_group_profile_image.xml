<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileImageCard"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp">
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_button_bg"
            android:src="@drawable/tab1_icon"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_by_other"
        android:text="AAAA"
        android:gravity="start"
        android:ellipsize="start"
        android:padding="7dp"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/profileImageCard"
        app:layout_constraintBottom_toBottomOf="@id/profileImageCard"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:text="19-aprel,2021-yil"
        android:textSize="11sp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profileImageCard"
        app:layout_constraintStart_toEndOf="@id/message"
        android:text="Normurodov Nazar"
        app:layout_constraintBottom_toBottomOf="@id/message"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>